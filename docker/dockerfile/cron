FROM ubuntu:14.04
ARG DLEMP_BASE_DIR

COPY ${DLEMP_BASE_DIR}docker/docker-config/crontab-laravel /etc/cron.d/laravel
COPY ${DLEMP_BASE_DIR}docker/docker-config/logrotate-cron-laravel /etc/logrotate.d/cron-laravel
RUN chmod 0644 /etc/cron.d/laravel && touch /var/log/cron-laravel.log

CMD ["cron", "-f"]
